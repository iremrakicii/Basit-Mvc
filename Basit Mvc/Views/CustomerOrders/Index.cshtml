
@{
    ViewData["Title"] = "Customer Details";
}
@model CustomerOrderViewModel

<!DOCTYPE html>

<html>
<head>
    <title>Customer Details</title>
</head>
<body

<h2>Müşteri Bilgileri</h2>
<p><strong>Id:</strong> @Model.Customer.Id</p>
<p><strong>Ad:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>
<p><strong>Email:</strong> @Model.Customer.Email</p>

<h2>Siparişler</h2>
<table>
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Birim Fiyat</th>
            <th>Miktar</th>
            <th>Toplam Tutar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
                <td>@(order.Price * order.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
<h3>Genel Toplam: @Model.Orders.Sum(o => o.Price * o.Quantity).ToString("C")</h3>
</body>
</html>


